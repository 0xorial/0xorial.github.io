script(type='text/ng-template' id='dialog.html')
  md-dialog#new-payment(layout='column' layout-padding='')
    div(directive='templateName' ng-attr-payment='template')
    div(layout='row')
      md-button.md-raised(ng-click='cancel()') Cancel
      md-button.md-raised(ng-click='ok()') Ok
  

div(layout='column' ng-controller='NewPaymentCtrl')
  div(layout='row' layout-align='end center')
    md-menu
      md-button(ng-click='showMenu($mdOpenMenu, $event)') new!
      md-menu-content(width='4')
        md-menu-item
          md-button.md-raised(ng-click='newSimplePayment($event)') Simple
        md-menu-item
          md-button.md-raised(ng-click='newPeriodicPayment($event)') Periodic
        md-menu-item
          md-button.md-raised(ng-click='newBorrowPayment($event)') Borrow
        md-menu-item
          md-button.md-raised(ng-click='newTaxableIncomePayment($event)') Income
