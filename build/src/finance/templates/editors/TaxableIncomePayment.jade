div.md-inline-form(layout='column')
  div(layout='row')
    md-input-container
      label Description
      input(ng-model='payment.params.description'  md-autofocus)
    accounts-drop-down(selected-account='payment.account')
  div(layout='row')
    md-input-container
      label Amount
      input(type='number' ng-model='payment.amount' style='width: 100px')
    md-input-container
      label VAT percentage
      input(type='number' ng-model='payment.params.vatPercentage' style='width: 100px')
    md-datepicker(ng-model='payment.params.paymentDateJs')
