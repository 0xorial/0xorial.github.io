html(lang='en', ng-app='StarterApp')
  head
    //- inline ./build/bower_components/angular-material/angular-material.min.css
    link(rel='stylesheet', href='./build/bower_components/angular-material/angular-material.min.css', inline='')
    link(rel='stylesheet', href='./build/bower_components/angular-material-data-table/dist/md-data-table.min.css', inline='')
    link(rel='stylesheet', href='./build/bower_components/md-color-picker/dist/mdColorPicker.min.css', inline='')
    //- inline ../app.css
    link(rel='stylesheet', href='../app.css', inline='')  

    script(src='./finance/drive.js')
    script(src='https://apis.google.com/js/client.js?onload=checkAuth')


  body.md-default-theme(ng-controller='AppCtrl' style='overflow: hidden; height:100%')
    //- #authorize-div(style='display: none')
    //-   span Authorize access to Drive API
    //-   // Button for the user to click to initiate auth sequence
    //-   button#authorize-button(onclick='insertFile("hello", {"hello": "world"})')
    //-     | Authorize
    //- button#authorize2-button(onclick='insertFile("hello", {"hello": "world"})')
    //-   | save
    //- pre#output

    div(style='width: 100%;' layout='row' layout-align=)
      md-tabs(flex='40' layout='column')
        md-tab(label='Accounts' layout='column')
          tab-body(flex='' layout='column')
            div(ng-include='"finance/controllers/AccountsList.html"' flex='100' layout='column')
        md-tab(label='Payments' layout='column')
          md-content(flex='66' )
            .md-whiteframe-z1(style='margin:10px' layout='column')
              div(ng-include='"finance/controllers/NewPayment.html"')
              div(ng-include='"finance/controllers/PaymentsList.html"')
                
      div(ng-include='"finance/controllers/TransactionsList.html"')
      
      div(ng-controller='SerializationCtrl' layout='column' flex='')
        textarea(ng-model='serializedData' flex='')
        div(layout='row')
          md-button.md-raised(ng-click='loadData()') Load
          md-button.md-raised(ng-click='saveData()') Save
      
    //- inline
    script(src='./build/bower_components/lodash/lodash.js', inline='')
