md-content.transactions-list(ng-controller='TransactionsListCtrl' layout='column' flex='')
  div.transaction(ng-repeat='transaction in allTransactions track by transaction.id' layout='row' ng-mouseenter='simulateUntil(transaction)' ng-mouseleave='simulateAll()' \ 
  layout-padding='' ng-style='{"background-color": transaction.higlight ? "#b3ffb3" : null }')
    //- div
      //- span.color(ng-style='{"background-color": transaction.account.color}')
    div.description {{transaction.description}}
    div.currency {{transaction.amount | currency}}
    div.date {{transaction.jsDate | date : 'dd/MM/yyyy'}}  
