html(lang='en', ng-app='StarterApp')
  head
    link(rel='stylesheet', href='../bower_components/angular-material/angular-material.min.css')
    link(rel='stylesheet', href='../bower_components/animate.css/animate.min.css')
    link(rel='stylesheet', href='app.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,400italic,500,500italic,700,700italic', rel='stylesheet', type='text/css')
  body(layout='row', ng-controller='AppCtrl' style='overflow: hidden; height:100%')
    md-content(style='width: 100%;')
      md-toolbar(md-scroll-shrink='')
        .md-toolbar-tools(layout-align='center center')
          h2
            span {{title}}
      md-content(layout='column', layout-align='start center')
        md-content(ui-view='', layout-padding='', style="width: 100%; max-width: 960px;")



    // Angular Material Dependencies
    script(src='./bower_components/lodash/lodash.js')
    script(src='./bower_components/angular/angular.js')
    script(src='./bower_components/angular-messages/angular-messages.js')
    script(src='./bower_components/angular-ui-router/release/angular-ui-router.min.js')
    script(src='./bower_components/angular-animate/angular-animate.min.js')
    script(src='./bower_components/angular-aria/angular-aria.min.js')
    script(src='./bower_components/angular-material/angular-material.min.js')
    script(src='./bower_components/angular-material-icons/angular-material-icons.min.js')
    script(src='./bower_components/bluebird/js/browser/bluebird.js')
    script(src='app.js')
    script(src='articles/articles.module.js')
    script(src='articles/articles.service.js')
    script(src='articles/articles.controller.js')
