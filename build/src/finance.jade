html(lang='en', ng-app='StarterApp')
  head
    //- inline ./build/bower_components/angular-material/angular-material.min.css
    link(rel='stylesheet', href='./build/bower_components/angular-material/angular-material.min.css', inline='')
    link(rel='stylesheet', href='./build/bower_components/md-color-picker/dist/mdColorPicker.min.css', inline='')
    //- inline ../app.css
    link(rel='stylesheet', href='../finance/app.css', inline='')

    script(type='text/javascript').
      var g_gapiClientLoaded;
      var g_gapiClientLoadedCb;
      var onGapiClientloaded = function(){ g_gapiClientLoaded = true; 
        if (g_gapiClientLoadedCb){g_gapiClientLoadedCb();} }
    script(src='https://apis.google.com/js/client.js?onload=onGapiClientloaded')

    //- base(href='/')

    script(type='text/ng-template' id='state.html')
      md-toolbar
        .md-toolbar-tools(ng-controller='SerializationCtrl')
          span Document:
          md-button.md-raised(ng-click='saveDrive()') Save
          md-button.md-raised#copy(ng-click='copy()') Copy Data
          md-button.md-raised(ng-click='loadData()') Load
          input#clipboard(ng-show='true' ng-model='serializedData')
          md-button.md-raised(ng-click='undo()' ng-disabled='!canUndo()') Undo
          md-button.md-raised(ng-click='redo()' ng-disabled='!canRedo()') Redo
          img.loader(src='/finance/495.gif' style='margin: 10px;')
      div(style='width: 100%;' layout='row' layout-align='start start')
        div(flex='50' layout='column')
          md-tabs(flex='100')
            md-tab(md-on-select='onPaymentsSelected()' md-active='paymentsActive()')
              md-tab-label Payments
              md-tab-body
                md-content
                  .md-whiteframe-z1(style='margin:10px;' layout='column' )
                    div(ng-include='"finance/controllers/NewPayment.html"')
                    div(ng-include='"finance/controllers/PaymentsList.html"')
            md-tab(md-on-select='onAccountsSelected()' md-active='accountsActive()')
              md-tab-label Accounts
              md-tab-body
                md-content
                  .md-whiteframe-z1(style='margin:10px;' layout='column' )
                    div(ng-include='"finance/controllers/AccountsList.html"' flex='100' layout='column')
        div(flex='50' layout='column')
          md-tabs(flex='100' md-dynamic-height='')
            md-tab(md-on-select='onOverviewSelected()' md-active='overviewActive()')
              md-tab-label Overview
              md-tab-body
                .md-whiteframe-z1(style='margin:10px;' layout='column' flex='')
                  div(ng-include='"finance/controllers/BudgetOverviewChart.html"' flex='80')
            md-tab(md-on-select='onTransactionsSelected()' md-active='transactionsActive()')
              md-tab-label Transactions
              md-tab-body
                .md-whiteframe-z1(style='margin:10px;' layout='column' flex='100')
                  div(ng-include='"finance/controllers/TransactionsList.html"' flex='80' layout='column')


  body.md-default-theme(style='overflow: hidden; height:100% width:100%' )
