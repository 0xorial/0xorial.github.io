div(ng-controller='AccountsListCtrl' style='margin:10px' layout-padding='' layout='column' flex='')
  div(layout='row')
    md-checkbox(ng-model='autoSelect') Auto
    md-datepicker(ng-model='date' ng-disabled='autoSelect')
  md-content.account-list(flex='')
    div(ng-repeat='account in accounts' layout='row')
      div(style='width:20px; height: 20px' \
        ng-style='{"background-color": account.account.color}')
      md-input-container()
        input(ng-model='account.account.color' style='width: 50px')
      md-input-container()
        input(ng-model='account.account.name' style='width: 150px')
      div {{account.balance | number : 2}}
      div {{account.account.currency}}
      button(style='background: none; border: none;')
        ng-md-icon(icon='delete' style="fill: #ff8c66; cursor:pointer;" size='24' \
          ng-click='delete(account)')
    div(layout='row')
      form(ng-submit='add()')
        md-input-container
          label Name
          input(ng-model='newAccountName')
        md-input-container
          label Currency
          input(ng-model='newAccountCurrency' style='width:40px')
        button(type='submit' style='background: none; border: none;')
          ng-md-icon(icon='add' style="fill: #66ffcc; cursor:pointer;" \
            size='24' ng-click='add()')
