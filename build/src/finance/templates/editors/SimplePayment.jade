div(layout='column')
  div(layout='row')
    md-input-container
      label Description
      input(ng-model='payment.description' md-autofocus)
    md-datepicker(ng-model='payment.dateJs')
    md-input-container
      label Amount
      input(type='number' ng-model='payment.amount' style='width: 100px')
    accounts-drop-down(selected-account='payment.account')
  div(layout='row')
    md-checkbox(ng-model='payment.isDeductible') Is deductible expense
    md-input-container()
      label Percentage
      input(type='number' ng-disabled='!payment.isDeductible' ng-model='payment.deductiblePercentage' style='width: 100px')
