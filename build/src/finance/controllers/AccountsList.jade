div(ng-controller='AccountsListCtrl' style='margin:10px' layout-padding='' layout='column')
  md-content.account-list()
    div(ng-repeat='account in accounts track by account.account.id' layout='row')
      div(style='width:20px; height: 20px' \
        ng-style='{"background-color": account.account.color}')
      md-input-container(style='width: 80px')
        input(ng-model='account.account.color')
      md-input-container(flex='')
        input(ng-model='account.account.name' flex='')
      div(style='width: 120px') {{account.balance | number : 2}}
      div(style='width: 60px') {{account.account.currency}}
      button(style='background: none; border: none;')
        ng-md-icon(icon='delete' style="fill: #ff8c66; cursor:pointer;" size='24' \
          ng-click='delete(account)')
    div(layout='row')
      form(ng-submit='add()')
        md-input-container
          label Name
          input(ng-model='newAccountName')
        md-input-container
          label Currency
          input(ng-model='newAccountCurrency' style='width:40px')
        button(type='submit' style='background: none; border: none;')
          ng-md-icon(icon='add' style="fill: #66ffcc; cursor:pointer;" size='24')
