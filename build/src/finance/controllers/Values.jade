script(type='text/ng-template' id='values-dialog.html')
  md-dialog#values(layout='column' layout-padding='')
    div(ng-repeat='value in values' layout='row')
      input(style='width: 100px' ng-model='value.name')
      input(style='width: 100px' ng-model='value.value')
      div(style='padding-left: 0;')
        button.icon-button
          ng-md-icon(icon='delete' style="fill: #ff8c66; cursor:pointer;" size='24' ng-click='delete(value.name)')
    div
      md-button.md-raised(ng-click='new()') New
    
    div(layout='row')
      md-button.md-raised(ng-click='cancel()') Cancel
      md-button.md-raised(ng-click='ok()') Ok

div(layout='column' ng-controller='ValuesCtrl')
  md-button.md-raised(ng-click='showValues()') Values
